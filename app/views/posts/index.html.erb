<p id="notice"><%= notice %></p>

<h1><%= t('.Listing') %><%= t('.Posts') %></h1>
<p><%= t('.list') %></p>
<p><%= @locale %></p>
<p><%= t('.hello') %></p>
<p><%= I18n.locale.to_s %></p> <!-- 현재 로케일 표시 -->
<p><%# I18n.locale = :en %></p>

<table>
  <thead>
    <tr>
      <th><%= t('.title') %></th>
      <th><%= t('.content')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to t('.Newpost'), new_post_path %>
